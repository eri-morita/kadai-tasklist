<h1>id: <%= @task.id %> 編集ページ</h1>

<%= form_with(model: @task, local: true) do |f| %>
  <%= f.label :content, '投稿' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>